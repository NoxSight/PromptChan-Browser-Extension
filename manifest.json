{
  "icons": {
    "16": "assets/logo.png",
    "32": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },
  "manifest_version": 3,
  "options_page": "options.html",
  "action": {
    "default_title": "Promptchan Sidebar",
    "default_popup": "injector.html"
  },
  "name": "Promptchan â€” Your Prompt Companion",
  "version": "1.5",
  "description": "AI prompt sidebar for chat.z.ai, chat.qwen.ai, ChatGPT, and Gemini",
  "content_scripts": [
    {
      "matches": [
        "https://chat.z.ai/*"
      ],
      "js": [
        "content/content-zai.js",
        "injector.js"
      ],
      "css": [
        "styles.css"
      ]
    },
    {
      "matches": [
        "https://chat.qwen.ai/*"
      ],
      "js": [
        "content/content-qwenai.js",
        "injector.js"
      ],
      "css": [
        "styles.css"
      ]
    },
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "js": [
        "content/content-chatgpt.js",
        "injector.js"
      ],
      "css": [
        "styles.css"
      ]
    },
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": [
        "content/content-gemini.js",
        "injector.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "injector.js",
        "assets/logo.png"
      ],
      "matches": [
        "https://chat.z.ai/*",
        "https://chat.qwen.ai/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'"
  }
}